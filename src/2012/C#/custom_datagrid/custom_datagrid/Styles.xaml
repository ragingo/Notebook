<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<LinearGradientBrush x:Key="DefaultControlBrush">
		<LinearGradientBrush.GradientStops>
			<GradientStop Offset="0.0" Color="{DynamicResource {x:Static SystemColors.ControlColorKey}}" />
			<GradientStop Offset="1.0" Color="{DynamicResource {x:Static SystemColors.ControlLightLightColorKey}}" />
		</LinearGradientBrush.GradientStops>
	</LinearGradientBrush>

	<Style x:Key="DataGridColumnHeaderCellStyle" TargetType="Border">
		<Setter Property="BorderThickness" Value="1,1,1,0" />
		<Setter Property="Background" Value="{DynamicResource DefaultControlBrush}" />
		<Setter Property="BorderBrush" Value="LightGray" />
	</Style>

</ResourceDictionary>