<!DOCTYPE html>
<html>
		<head>
				<meta charset="utf-8" />
				<meta name="keywords" content="yakiniku,焼肉部" />
				<meta name="description" content="焼肉部（非公式）サイトです。" />
				<title>@ViewBag.Title</title>
				<link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
				<link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/css")" rel="stylesheet" type="text/css" />
				<link href="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Content/themes/base/css")" rel="stylesheet" type="text/css" />
				<script type="text/javascript" src="@System.Web.Optimization.BundleTable.Bundles.ResolveBundleUrl("~/Scripts/js")"></script>
				<script type="text/javascript" src="~/Scripts/my/common.js"></script>
				<meta name="viewport" content="width=device-width" />
		</head>
		<body>
				@Html.Partial("_ViewSwitcher")
				<header>
						<div class="content-wrapper">
								<div class="float-left">
										<div id="flashContent">
											<object type="application/x-shockwave-flash" width="300" height="150">
												<param name="movie" value="~/Images/top_logo1.swf" />
												<param name="loop" value="true" />
												<param name="scale" value="exactfit" />
											</object>
										</div>
								</div>
								<div class="float-right">
										<section id="login">
												@Html.Partial("_LoginPartial")
										</section>
										<nav>
												<ul id="menu">
														<li>@Html.ActionLink("Home", "Index", "Home")</li>
														@if (Request.IsAuthenticated)
														{
														<li>@Html.ActionLink("About", "About", "Home")</li>
														<li>@Html.ActionLink("Contact", "Contact", "Home")</li>
														}
												</ul>
										</nav>
								</div>
						</div>
				</header>
				<div id="body">
						@RenderSection("featured", required: false)
						<section class="content-wrapper main-content clear-fix">
								@RenderBody()
						</section>
				</div>
				<footer>
						<div class="content-wrapper">
								<div class="float-left">
										<p>&copy; @DateTime.Now.Year - 焼肉部</p>
								</div>
								<div class="float-right">
										<ul id="social">
												<li><a href="http://facebook.com" class="facebook">Facebook</a></li>
												<li><a href="http://twitter.com" class="twitter">Twitter</a></li>
										</ul>
								</div>
						</div>
				</footer>
		</body>
</html>
